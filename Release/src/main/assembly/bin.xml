<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
  http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>bin</id>
	<includeBaseDirectory>false</includeBaseDirectory>
	<formats>
		<format>zip</format>
	</formats>
	<files>
		<file>
			<source>../runtime/target/jpbcg-runtime-${project.version}.jar</source>
			<outputDirectory></outputDirectory>
		</file>
	</files>

	<fileSets>
		<fileSet>
			<directory>../generator/target/appassembler</directory>
			<outputDirectory>generator-${project.version}</outputDirectory>
		</fileSet>

		<fileSet>
			<directory>../quickstart</directory>
			<outputDirectory>quickstart-${project.version}</outputDirectory>
			<includes>
				<include>generate/**</include>
				<include>generator/**</include>
				<include>lib/**</include>
				<include>sql/**</include>
				<include>src/**</include>
				<include>pom.xml</include>
				<include>README.md</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>